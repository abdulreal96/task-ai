{
  "expo": {
    "name": "Task AI Manager",
    "slug": "task-ai-frontend",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#6366f1"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.taskaimanager.app",
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "This app needs access to speech recognition to convert your voice to text for creating tasks.",
        "NSMicrophoneUsageDescription": "This app needs access to your microphone to record audio for task creation."
      }
    },
    "android": {
      "package": "com.taskaimanager.app",
      "adaptiveIcon": {
        "backgroundColor": "#6366f1"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro"
    }
  }
}
